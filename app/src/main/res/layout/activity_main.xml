<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secGray"
    tools:context="com.example.cibele.testeacervo.MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/firstYellow"
            android:id="@+id/topCadastro">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:src="@drawable/book1"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/topCadastro"
            android:background="@drawable/editback"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            android:id="@+id/topImagem">
            <FrameLayout
                android:layout_gravity="center"
                android:layout_width="150dp"
                android:layout_height="100dp">
                <ImageView
                    android:id="@+id/imgLivro"
                    android:layout_margin="2dp"
                    android:background="@drawable/image8690"
                    android:layout_width="wrap_content"
                    android:scaleType="centerCrop"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"/>
                <Button
                    android:id="@+id/botaoCamera"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:background="@drawable/camera"
                    android:layout_gravity="bottom|right"
                    android:onClick="imagemLivro"
                    />
            </FrameLayout>
        </FrameLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Cadastro"
            android:background="@color/firstGray"
            android:padding="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/topImagem">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName|textCapWords"
                android:hint="@string/hint_nome"
                android:textColor="@color/firstYellow"
                android:textColorHint="@color/firstYellow"
                android:textSize="18dp"
                android:background="@drawable/edittext_bg"
                android:drawableLeft="@drawable/item1"
                android:drawablePadding="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:id="@+id/txtTitulo"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName|textCapWords"
                android:hint="@string/hint_descricao"
                android:textColor="@color/firstYellow"
                android:textColorHint="@color/firstYellow"
                android:textSize="18dp"
                android:layout_below="@id/txtTitulo"
                android:background="@drawable/edittext_bg"
                android:layout_marginTop="15dp"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:paddingBottom="10dp"
                android:gravity="top"
                android:minHeight="100dp"
                android:id="@+id/txtDescricao"/>
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtDescricao"
                android:background="@drawable/edittext_bg"
                android:layout_marginTop="15dp"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:paddingBottom="10dp"
                android:entries="@array/Conservacao"
                android:textColorHint="@color/firstYellow"
                android:id="@+id/spnConservacao"/>
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spnConservacao"
                android:background="@drawable/edittext_bg"
                android:layout_marginTop="15dp"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:paddingBottom="10dp"
                android:entries="@array/Editora"
                android:id="@+id/spnEditora"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/volumeText"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/spnEditora"
                android:id="@+id/volumeText"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/volumeText"
                android:text="@string/salvar"
                android:onClick="registrarLivro"
                android:background="@drawable/buttom"
                android:layout_marginTop="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:id="@+id/botaoSalvar"/>
            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_bg"
                android:id="@+id/topVolume"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_marginTop="15dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/spnEditora">
                <Button
                    android:id="@+id/botaoCima"
                    android:background="@drawable/botao"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:onClick="aumentaValor"/>
                <TextView
                    android:id="@+id/textoMeio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/volume"
                    android:textColor="@color/firstYellow"
                    android:textAlignment="center"
                    android:layout_below="@id/botaoCima"/>
                <Button
                    android:layout_below="@id/textoMeio"
                    android:id="@+id/botaoBaixo"
                    android:background="@drawable/botao2"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:onClick="diminuiValor"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>
