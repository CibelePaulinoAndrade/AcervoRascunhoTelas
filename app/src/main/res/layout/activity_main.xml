<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secGray"
    tools:context="com.example.cibele.testeacervo.MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/firstYellow"
        android:id="@+id/topCadastro">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:src="@drawable/book1"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topCadastro"
        android:background="@drawable/editback"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/topImagem">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="50dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Cadastro"
        android:background="@color/firstGray"
        android:padding="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/topImagem">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName|textCapWords"
            android:hint="@string/hint_nome"
            android:textColor="@color/firstYellow"
            android:textColorHint="@color/firstYellow"
            android:textSize="18dp"
            android:background="@drawable/edittext_bg"
            android:drawableLeft="@drawable/item1"
            android:drawablePadding="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:id="@+id/txtTitulo"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName|textCapWords"
            android:hint="@string/hint_descricao"
            android:textColor="@color/firstYellow"
            android:textColorHint="@color/firstYellow"
            android:textSize="18dp"
            android:layout_below="@id/txtTitulo"
            android:background="@drawable/edittext_bg"
            android:layout_marginTop="15dp"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"
            android:id="@+id/txtDescricao"/>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtDescricao"
            android:background="@drawable/edittext_bg"
            android:layout_marginTop="15dp"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"
            android:entries="@array/Conservacao"
            android:textColorHint="@color/firstYellow"
            android:id="@+id/spnConservacao"/>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spnConservacao"
            android:background="@drawable/edittext_bg"
            android:layout_marginTop="15dp"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"
            android:entries="@array/Editora"
            android:id="@+id/spnEditora"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/spnEditora"
            android:text="@string/salvar"
            android:background="@drawable/buttom"
            android:layout_marginTop="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:id="@+id/botaoSalvar"/>
    </RelativeLayout>
</RelativeLayout>
